{
  "compilerOptions": {
  "rootDir": "src",
  "outDir": "dist",
  "target": "es2022",
  "module": "NodeNext",
  "sourceMap": true,
  "allowJs": false,
  "alwaysStrict": true,
  "resolveJsonModule": true,
  "noImplicitAny": true,
  "strictNullChecks": true,
  "esModuleInterop": true,
  "skipLibCheck": true
},
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
